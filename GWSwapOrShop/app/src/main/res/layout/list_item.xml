<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/item_image" />

    <TextView
        android:id="@+id/item_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image_view"
        android:layout_alignParentStart="true"
        android:text="Item Name"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/item_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name_view"
        android:layout_alignParentStart="true"
        android:text="Price"
        android:textColor="@color/blue"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/item_description_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_price_view"
        android:layout_alignParentStart="true"
        android:textColor="@color/blue"
        android:text="Description"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/item_condition_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_description_view"
        android:layout_alignParentStart="true"
        android:text="Condition"
        android:textStyle="italic"
        android:textColor="@color/blue"
        android:layout_marginTop="4dp" />
</RelativeLayout>
